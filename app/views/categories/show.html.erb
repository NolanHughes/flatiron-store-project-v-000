<h1><%= @category.title %></h1>

<ul>
<% @category.items.each do |item| %>
  <% if user_signed_in? %>
    <li><%= link_to item.title, item_path(item) %> | <%= number_to_currency(item.price_as_decimal) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></li>
  <% else %>
    <li><%= link_to item.title, item_path(item) %> | <%= number_to_currency(item.price_as_decimal) %> </li>
  <% end %>
<% end %>
</ul>
